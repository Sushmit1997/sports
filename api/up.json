{
  "name": "sports-api",
  "profile": "default",
  "regions": ["ap-south-1"],
  "stages": {
    "dev": {
      "domain": "dev.api.sports.lftechnology.com",
      "hooks": {
        "build": "envault list -secret=sports/api/dev > .env && yarn && yarn build"
      }
    },
    "production": {
      "domain": "api.sports.lftechnology.com",
      "hooks": {
        "build": "envault list -secret=sports/api/production > .env && yarn && yarn build"
      }
    }
  }
}
