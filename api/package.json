{
  "name": "api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start":"node dist",
    "clean": "rimraf dist",
    "serve": "node 'dist/index.js'",
    "build": "npm run clean && tsc -p . && ncp src/schema dist/schema",
    "start:dev": "npm run build:dev",
    "build:dev": "nodemon 'src/server.ts' --exec 'ts-node' src/server.ts -e ts,graphql",
    "migrate": "knex --knexfile src/knexfile.ts' migrate:latest",
    "migrate:make": "knex --knexfile knexfile.ts -x ts migrate:make",
    "migrate:rollback": "knex --knexfile knexfile.ts migrate:rollback",
    "seed": "knex --knexfile knexfile.ts seed:run",
    "seed:make": "knex --knexfile knexfile.ts -x ts seed:make",
    "lint": "tslint src/**/*.{ts,js}",
    "lint:fix": "tslint --fix src/**/*.{ts,js}",
    "prettify": "prettier --config ./.prettierrc --write src/**/*.{ts,js,json}"
  },
  "lint-staged": {
    "linters": {
      "*.{ts, js}": [
        "tslint --fix src/**/*.{ts,js}",
        "prettier --config ./.prettierrc --write src/**/*.{ts,js,json}",
        "git add"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "apollo-server-express": "^2.6.3",
    "bookshelf": "^0.15.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "graphql": "^14.3.1",
    "knex": "^0.16.5",
    "ncp": "^2.0.0",
    "pg": "^7.11.0"
  },
  "devDependencies": {
    "@types/bookshelf": "^0.13.2",
    "@types/compression": "^0.0.36",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/graphql": "^14.2.1",
    "@types/graphql-depth-limit": "^1.1.0",
    "@types/node": "^12.0.8",
    "graphql-depth-limit": "^1.1.0",
    "graphql-import": "^0.7.1",
    "graphql-import-node": "^0.0.4",
    "husky": "^2.4.1",
    "lint-staged": "^8.2.1",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "ts-node": "^8.3.0",
    "tslint": "^5.17.0",
    "tslint-config-leapfrog": "^1.0.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.2"
  }
}
