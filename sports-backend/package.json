{
  "name": "sports-backend",
  "version": "1.0.0",
  "description": "Backend system for sports",
  "main": "index.js",
  "author": "Sanjeev Kumar Pandit <binarysanjeev@gmail.com>",
  "license": "MIT",
  "scripts": {
    "precommit": "lint-staged",
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run tslint",
    "build-ts": "tsc",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "watch-ts": "tsc -w",
    "serve": "nodemon dist/server.js",
    "lint": "tslint -c tslint.json -p tsconfig.json 'src/**/*.ts'",
    "lint-fix": "tslint --fix -c tslint.json -p tsconfig.json 'src/**/*.ts'",
    "migrate": "knex migrate:latest",
    "rollback": "knex migrate:rollback"
  },
  "lint-staged": {
    "gitDir": "../",
    "*.{ts, js}": [
      "npm run lint-fix",
      "git add"
    ]
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "bookshelf": "^0.10.4",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "joi": "^13.0.1",
    "knex": "^0.13.0",
    "pg": "^7.3.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.7",
    "@types/bookshelf": "^0.9.6",
    "@types/dotenv": "^4.0.2",
    "@types/express": "^4.0.39",
    "@types/joi": "^10.4.4",
    "@types/knex": "^0.0.64",
    "concurrently": "^3.5.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.3.0",
    "nodemon": "^1.12.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "tslint-config-leapfrog": "^1.0.0",
    "typescript": "^2.5.3"
  }
}
