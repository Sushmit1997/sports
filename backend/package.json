{
  "name": "sports-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "author": "",
  "license": "ISC",
  "scripts": {
    "precommit": "lint-staged",
    "start": "npm run build && npm run watch",
    "build-ts": "tsc",
    "build": "rimraf dist && npm run build-ts && npm run lint",
    "watch-ts": "tsc -w",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "serve": "nodemon",
    "seed": "knex seed:run",
    "migrate": "knex migrate:latest",
    "rollback": "knex migrate:rollback",
    "make:seeder": "knex seed:make",
    "make:migration": "knex migrate:make",
    "lint": "tslint -c tslint.json -p tsconfig.json 'src/**/*.{ts,js}'",
    "lint:fix": "tslint --fix -c tslint.json -p tsconfig.json 'src/**/*.{ts,js}'",
    "prettify": "prettier --single-quote --parser typescript --print-width 120 --write 'src/**/*.{ts,js}'"
  },
  "lint-staged": {
    "linters": {
      "*.{ts, js}": [
        "tslint --fix -c tslint.json",
        "prettier --single-quote --parser typescript --print-width 120 --write './**/*.{ts,js}'",
        "git add"
      ]
    }
  },
  "dependencies": {
    "body-parser": "1.18.2",
    "bookshelf": "0.12.1",
    "bookshelf-camelcase": "^2.0.1",
    "boom": "^7.1.1",
    "cors": "^2.8.4",
    "dotenv": "4.0.0",
    "express": "4.16.2",
    "helmet": "^3.9.0",
    "http-status-codes": "^1.3.0",
    "joi": "^13.1.1",
    "knex": "0.14.2",
    "morgan": "^1.9.0",
    "pg": "7.4.1",
    "winston": "^2.4.0",
    "winston-daily-rotate-file": "^1.7.2"
  },
  "devDependencies": {
    "@types/body-parser": "1.16.8",
    "@types/bookshelf": "0.9.7",
    "@types/cors": "^2.8.3",
    "@types/dotenv": "4.0.2",
    "@types/express": "4.11.0",
    "@types/helmet": "^0.0.37",
    "@types/joi": "13.0.5",
    "@types/knex": "0.14.0",
    "@types/morgan": "^1.7.35",
    "@types/winston": "^2.3.7",
    "concurrently": "3.5.1",
    "husky": "0.14.3",
    "lint-staged": "6.0.0",
    "nodemon": "1.14.11",
    "prettier": "^1.10.2",
    "rimraf": "^2.6.2",
    "ts-node": "4.1.0",
    "tslint": "5.9.1",
    "tslint-config-leapfrog": "1.0.0",
    "tslint-config-prettier": "^1.6.0",
    "typescript": "2.6.2"
  }
}
