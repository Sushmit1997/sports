{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "target": "es6",
    "outDir": "dist",
    "sourceMap": true,
    "types": ["node"],
    "module": "commonjs",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["es2015", "es2016", "es2017"],
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test/**/*"]
}
