{
  "name": "chess-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "author": "",
  "license": "ISC",
  "scripts": {
    "precommit": "lint-staged",
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run lint",
    "build-ts": "tsc",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "watch-ts": "tsc -w",
    "serve": "nodemon dist/server.js",
    "lint": "tslint -c tslint.json -p tsconfig.json 'src/**/*.ts'",
    "lint-fix": "tslint --fix -c tslint.json -p tsconfig.json 'src/**/*.ts'",
    "migrate": "knex migrate:latest",
    "rollback": "knex migrate:rollback"
  },
  "lint-staged": {
    "linters": {
      "*.{ts, js}": [
        "lint-fix",
        "git add"
      ]
    }
  },
  "dependencies": {
    "body-parser": "1.18.2",
    "bookshelf": "0.12.1",
    "dotenv": "4.0.0",
    "express": "4.16.2",
    "joi": "13.1.0",
    "knex": "0.14.2",
    "pg": "7.4.1"
  },
  "devDependencies": {
    "@types/body-parser": "1.16.8",
    "@types/bookshelf": "0.9.7",
    "@types/dotenv": "4.0.2",
    "@types/express": "4.11.0",
    "@types/joi": "13.0.5",
    "@types/knex": "0.14.0",
    "concurrently": "3.5.1",
    "husky": "0.14.3",
    "lint-staged": "6.0.0",
    "nodemon": "1.14.11",
    "ts-node": "4.1.0",
    "tslint": "5.9.1",
    "tslint-config-leapfrog": "1.0.0",
    "typescript": "2.6.2"
  }
}
