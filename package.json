{
  "name": "lf-sports-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "lint:sass": "stylelint src/**/*.scss",
    "lint:sass-fix": "stylelint src/**/*.scss --fix",
    "prettify": "prettier -print-width 120 --single-quote true --write src/**/*.{js,jsx}",
    "prettify:sass": "prettier --parser scss --print-width 120 --write src/**/*.{sass,scss}"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.4.1",
    "axios": "^0.18.0",
    "date-fns": "^1.29.0",
    "vue": "^2.5.17",
    "vue-router": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.5",
    "@vue/cli-plugin-eslint": "^3.0.5",
    "@vue/cli-service": "^3.0.5",
    "@vue/eslint-config-prettier": "^3.0.5",
    "lint-staged": "^7.2.2",
    "node-sass": "^4.9.0",
    "prettier": "^1.14.3",
    "sass-loader": "^7.0.1",
    "stylelint": "^9.6.0",
    "stylelint-config-standard": "^18.2.0",
    "vue-template-compiler": "^2.5.17"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.{sass,scss}": [
      "stylelint src/**/*.scss --fix",
      "prettier --parser scss --print-width 120 --write src/**/*.{sass,scss}",
      "git add"
    ]
  }
}
