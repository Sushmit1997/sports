{
  "name": "lf-sports-web",
  "version": "0.1.0",
  "dependencies": {
    "@fortawesome/fontawesome": "^1.1.7",
    "@fortawesome/fontawesome-free-solid": "^5.0.12",
    "@fortawesome/react-fontawesome": "^0.0.19",
    "axios": "^0.17.1",
    "bootstrap": "3.3.7",
    "moment": "^2.22.2",
    "node-sass-chokidar": "^1.2.0",
    "npm-run-all": "^4.1.2",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.1.0"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --config ./.prettierrc --write src/**/*.{js,jsx}",
      "git add"
    ],
    "*.{sass,scss}": [
      "stylelint src/**/*.scss --fix",
      "prettier --parser scss --print-width 120 --write src/**/*.{sass,scss}",
      "git add"
    ]
  },
  "scripts": {
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build-js": "react-scripts build",
    "build": "npm-run-all build-css build-js",
    "build-css": "node-sass-chokidar src/assets/sass/ -o src/assets/sass",
    "watch-css": "npm run build-css && node-sass-chokidar src/assets/sass/ -o src/assets/sass --watch --recursive",
    "precommit": "lint-staged",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "lint:sass": "stylelint src/**/*.scss",
    "lint:sass-fix": "stylelint src/**/*.scss --fix",
    "prettify": "prettier --config ./.prettierrc --write src/**/*.{js,jsx}",
    "prettify:sass": "prettier --parser scss --print-width 120 --write src/**/*.{sass,scss}"
  },
  "contributors": [
    "sanjeevpandit@lftechnology.com"
  ],
  "devDependencies": {
    "eslint": "^4.16.0",
    "eslint-config-react-app": "^1.0.4",
    "eslint-loader": "1.7.1",
    "eslint-plugin-flowtype": "^2.42.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "5.0.3",
    "eslint-plugin-react": "7.0.1",
    "husky": "^0.14.3",
    "lint-staged": "^6.1.0",
    "prettier": "^1.10.2",
    "stylelint": "^9.2.1",
    "stylelint-config-standard": "^18.2.0"
  },
  "engines": {
    "node": ">= 8.9.1",
    "npm": ">= 5.5.1"
  }
}
